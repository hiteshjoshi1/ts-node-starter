{
    "name": "ts-node-starter",
    "version": "1.0.0",
    "description": "Expres Node Js application boilerplate written in typescript",
    "main": "index.ts",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run route:gen && npm run build-ts && npm run tslint",
        "serve": "node build/server.js",
        "watch-node": "nodemon build/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\"  \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect build/server.js",
        "route:gen": "tsoa swagger && tsoa routes",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
    },
    "keywords": [
        "Node",
        "express",
        "typescript",
        "api",
        "postgres"
    ],
    "author": "Hitesh Joshi",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.18.3",
        "express": "^4.16.4",
        "http-errors": "^1.7.1",
        "swagger-ui-express": "^4.0.6",
        "tsoa": "^2.4.3",
        "verror": "^1.10.0",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@types/express": "^4.16.1",
        "@types/http-errors": "^1.6.1",
        "@types/jest": "^23.3.13",
        "@types/node": "^10.12.18",
        "@types/supertest": "^2.0.7",
        "@types/verror": "^1.10.3",
        "concurrently": "^4.1.1",
        "jest": "^24.8.0",
        "nodemon": "^1.18.9",
        "prettier": "^1.16.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.0.1",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "^3.2.4"
    }
}
